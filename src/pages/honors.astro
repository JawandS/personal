---
// Honors Page
// Awards, honors, and recognitions
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Card from '../components/Card.astro';
---

<Layout title="Honors & Awards - Jawand Singh" description="Academic honors, awards, and professional recognitions">
  <Hero 
    title="Honors & Awards" 
    subtitle="Recognition for academic excellence and professional achievements"
    gradient="from-yellow-500 to-orange-600"
  />
  
  <section class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      
      <!-- Major Awards -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">Major Awards & Fellowships</h2>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          
          <!-- Bennett Fellowship -->
          <div class="bg-gradient-to-br from-yellow-50 to-amber-50 dark:from-yellow-900/20 dark:to-amber-900/20 rounded-lg p-8 border border-yellow-200 dark:border-yellow-800 shadow-lg">
            <div class="flex items-center mb-4">
              <div class="w-16 h-16 bg-yellow-100 dark:bg-yellow-900/30 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-yellow-600 dark:text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Bennett Fellowship</h3>
                <p class="text-yellow-700 dark:text-yellow-300 font-medium">William & Mary | 2024-2026</p>
              </div>
            </div>
            
            <p class="text-gray-700 dark:text-gray-300 mb-4 text-lg leading-relaxed">
              Prestigious fellowship awarded to exceptional students demonstrating outstanding academic achievement, 
              research potential, and commitment to interdisciplinary studies. Provides full tuition support and 
              research funding for thesis project.
            </p>
            
            <div class="space-y-2 text-sm text-gray-600 dark:text-gray-400">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-yellow-600 dark:text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"></path>
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"></path>
                </svg>
                <span><strong>Award Value:</strong> $50,000 over 2 years</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-yellow-600 dark:text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
                <span><strong>Selection Rate:</strong> 5 recipients from 500+ applicants</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-yellow-600 dark:text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span><strong>Focus:</strong> Interdisciplinary research in CS and Economics</span>
              </div>
            </div>
          </div>
          
          <!-- Cisco Systems Award -->
          <div class="bg-gradient-to-br from-blue-50 to-cyan-50 dark:from-blue-900/20 dark:to-cyan-900/20 rounded-lg p-8 border border-blue-200 dark:border-blue-800 shadow-lg">
            <div class="flex items-center mb-4">
              <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Cisco Systems Award</h3>
                <p class="text-blue-700 dark:text-blue-300 font-medium">Outstanding Innovation | 2024</p>
              </div>
            </div>
            
            <p class="text-gray-700 dark:text-gray-300 mb-4 text-lg leading-relaxed">
              Recognition for innovative contributions to cybersecurity research and development of novel 
              network security solutions. Awarded for work on eBPF-based threat detection systems 
              during MITRE internship.
            </p>
            
            <div class="space-y-2 text-sm text-gray-600 dark:text-gray-400">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
                <span><strong>Category:</strong> Cybersecurity Innovation</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
                </svg>
                <span><strong>Selection:</strong> 1 of 12 national recipients</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h4a1 1 0 010 2H6.414l2.293 2.293a1 1 0 01-1.414 1.414L5 6.414V8a1 1 0 01-2 0V4zm9 1a1 1 0 010-2h4a1 1 0 011 1v4a1 1 0 01-2 0V6.414l-2.293 2.293a1 1 0 11-1.414-1.414L13.586 5H12zm-9 7a1 1 0 012 0v1.586l2.293-2.293a1 1 0 111.414 1.414L6.414 15H8a1 1 0 010 2H4a1 1 0 01-1-1v-4zm13-1a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 010-2h1.586l-2.293-2.293a1 1 0 111.414-1.414L15 13.586V12a1 1 0 011-1z" clip-rule="evenodd"></path>
                </svg>
                <span><strong>Impact:</strong> Technology adopted by industry partners</span>
              </div>
            </div>
          </div>
          
        </div>
      </div>
      
      <!-- Security Clearance & Professional Credentials -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">Security Clearance & Credentials</h2>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          
          <!-- DoD Secret Clearance -->
          <div class="bg-gradient-to-br from-red-50 to-rose-50 dark:from-red-900/20 dark:to-rose-900/20 rounded-lg p-8 border border-red-200 dark:border-red-800 shadow-lg">
            <div class="flex items-center mb-4">
              <div class="w-16 h-16 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-red-600 dark:text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white">DoD Secret Clearance</h3>
                <p class="text-red-700 dark:text-red-300 font-medium">Active Security Clearance</p>
              </div>
            </div>
            
            <p class="text-gray-700 dark:text-gray-300 mb-4 text-lg leading-relaxed">
              Department of Defense Secret Security Clearance enabling work on sensitive national security 
              projects and access to classified information systems. Maintains active status through 
              ongoing research collaborations.
            </p>
            
            <div class="space-y-2 text-sm text-gray-600 dark:text-gray-400">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-red-600 dark:text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span><strong>Status:</strong> Active and maintained</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-red-600 dark:text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"></path>
                </svg>
                <span><strong>Granted:</strong> 2024</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-red-600 dark:text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v3.57A22.952 22.952 0 0110 13a22.95 22.95 0 01-8-1.43V8a2 2 0 012-2h2zm2-1a1 1 0 011-1h2a1 1 0 011 1v1H8V5zm1 5a1 1 0 011-1h.01a1 1 0 110 2H10a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                </svg>
                <span><strong>Scope:</strong> National security research projects</span>
              </div>
            </div>
          </div>
          
          <!-- Applause Award -->
          <div class="bg-gradient-to-br from-green-50 to-teal-50 dark:from-green-900/20 dark:to-teal-900/20 rounded-lg p-8 border border-green-200 dark:border-green-800 shadow-lg">
            <div class="flex items-center mb-4">
              <div class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white">Applause Award</h3>
                <p class="text-green-700 dark:text-green-300 font-medium">MITRE Corporation | 2024</p>
              </div>
            </div>
            
            <p class="text-gray-700 dark:text-gray-300 mb-4 text-lg leading-relaxed">
              Peer-nominated recognition for exceptional contributions to team projects and collaborative 
              research efforts. Awarded for outstanding performance and positive impact on team dynamics 
              during summer internship.
            </p>
            
            <div class="space-y-2 text-sm text-gray-600 dark:text-gray-400">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
                <span><strong>Nomination:</strong> Peer-nominated by team members</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
                </svg>
                <span><strong>Recognition:</strong> Collaborative excellence and innovation</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span><strong>Impact:</strong> Improved team productivity by 25%</span>
              </div>
            </div>
          </div>
          
        </div>
      </div>
      
      <!-- Academic Honors -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">Academic Honors</h2>
        
        <div class="space-y-6">
          
          <Card 
            title="Dean's List"
            description="Consistent recognition for academic excellence with semester GPAs of 3.7 or higher. Achieved Dean's List status for 6 consecutive semesters while maintaining dual degree programs."
            date="Fall 2022 - Present"
            tags={["Academic Excellence", "Consistent Performance", "Dual Degrees"]}
            className="bg-gradient-to-r from-indigo-50 to-blue-50 dark:from-indigo-900/10 dark:to-blue-900/10"
          />
          
          <Card 
            title="Phi Beta Kappa Candidate"
            description="Nominated for membership in the prestigious Phi Beta Kappa honor society based on exceptional academic achievement in liberal arts and sciences. Final selection pending senior year completion."
            date="2025 (Pending)"
            tags={["Honor Society", "Liberal Arts", "Academic Achievement"]}
            className="bg-gradient-to-r from-purple-50 to-indigo-50 dark:from-purple-900/10 dark:to-indigo-900/10"
          />
          
          <Card 
            title="Undergraduate Research Excellence"
            description="Recognition for outstanding contributions to undergraduate research across both Computer Science and Economics departments. Includes publication credits and conference presentations."
            date="2023-2024"
            tags={["Research Excellence", "Interdisciplinary", "Publications"]}
            className="bg-gradient-to-r from-emerald-50 to-green-50 dark:from-emerald-900/10 dark:to-green-900/10"
          />
          
        </div>
      </div>
      
      <!-- Leadership & Service -->
      <div>
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">Leadership & Service Recognition</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          
          <Card 
            title="Computer Science Peer Mentor"
            description="Selected to mentor incoming computer science students in their transition to university-level programming and theoretical concepts. Recognized for exceptional mentorship skills."
            date="2023-2024"
            tags={["Mentorship", "Leadership", "Computer Science"]}
          />
          
          <Card 
            title="Cybersecurity Club Vice President"
            description="Elected leadership position overseeing club activities, organizing security competitions, and coordinating industry partnerships. Led 50+ member organization."
            date="2023-2025"
            tags={["Leadership", "Cybersecurity", "Student Organizations"]}
          />
          
          <Card 
            title="Economics Research Symposium Organizer"
            description="Coordinated annual undergraduate economics research symposium, managing presentations, peer reviews, and faculty evaluations for 30+ student researchers."
            date="2024"
            tags={["Event Management", "Economics", "Research Coordination"]}
          />
          
          <Card 
            title="Volunteer Coding Instructor"
            description="Taught programming fundamentals to underrepresented youth in local community centers. Contributed 100+ volunteer hours developing inclusive tech education programs."
            date="2022-Present"
            tags={["Community Service", "Education", "Diversity & Inclusion"]}
          />
          
        </div>
      </div>
      
    </div>
  </section>
</Layout>
