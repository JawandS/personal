---
// Experience Page
// Professional work experience with detailed project descriptions
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Card from '../components/Card.astro';
---

<Layout title="Experience - Jawand Singh" description="Professional work experience and internships">
  <Hero 
    title="Professional Experience" 
    subtitle="Internships, projects, and professional development"
    gradient="from-orange-500 to-red-600"
  />
  
  <section class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      
      <div class="grid grid-cols-1 gap-8">
        
        <!-- MITRE Corporation -->
        <Card 
          title="MITRE Corporation - Software Engineer Intern"
          description="Working on EGADS for 15 months including the school year, balanced three projects over the summer. Created two full-stack web applications, delivered one to the Sponsor and integrated LLM parsing into the other. Contributed to an internal technical report using economic cost analysis for attritable aircraft acquisition."
          date="McLean, VA | 05/2024 - Present"
          tags={["Python", "C", "C++", "Rust", "Svelte", "JavaScript", "HTML/CSS", "LLM", "Full Stack"]}
          className="border-l-4 border-l-green-500"
        />
        
        <!-- CodAKid -->
        <Card 
          title="CodAKid - Programming Instructor"
          description="Taught the fundamentals of programming in Java, Python, and Scratch to new and mid-experience students."
          date="Remote | 09/2023 - 05/2024"
          tags={["Java", "Python", "Scratch", "Education", "Teaching"]}
          className="border-l-4 border-l-blue-500"
        />
        
        <!-- Appian Corporation -->
        <Card 
          title="Appian Corporation - Information Security Engineer Intern"
          description="Improved threat analysis by consolidating threat intelligence from HTMLS/RSS feeds on an Appian web app. Provided engineering support on Bash scripts to security engineers and pushed changes to production."
          date="McLean, VA | 06/2023 - 08/2023"
          tags={["Security", "Bash", "Web Applications", "Threat Intelligence"]}
          className="border-l-4 border-l-purple-500"
        />
        
      </div>
      
    </div>
  </section>
</Layout>
