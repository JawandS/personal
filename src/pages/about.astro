---
// About Page
// Detailed information about education and background
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
---

<Layout
  title="About - Jawand Singh"
  description="Education and background information for Jawand Singh"
>
  <Hero
    title="About Me"
    subtitle="Background & Education"
    gradient="from-navy-700 to-accent-700"
  />

  <section class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <!-- Education Section -->
      <div class="mb-12">
        <h2 class="text-3xl font-bold text-primary-100 mb-8 text-center">
          Education
        </h2>

        <div
          class="bg-navy-900 rounded-lg shadow-lg p-8 border border-navy-800"
        >
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div
                class="w-16 h-16 bg-accent-900/30 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-8 h-8 text-accent-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.75 2.524z"
                  ></path>
                </svg>
              </div>
            </div>
            <div class="flex-1">
              <h3 class="text-2xl font-semibold text-primary-100 mb-2">
                William & Mary
              </h3>
              <p class="text-lg text-accent-400 mb-2">
                B.S. in Computer Science & B.A. in Economics
              </p>
              <p class="text-primary-300 mb-4">
                <strong>GPA:</strong> 3.98 | <strong
                  >Expected Graduation:</strong
                > May 2026
              </p>

              <!-- Coursework -->
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
                <!-- Computer Science Courses -->
                <div>
                  <h4 class="font-semibold text-primary-100 mb-3">
                    Computer Science
                  </h4>
                  <ul class="space-y-1 text-sm text-primary-300">
                    <li>• Edge Computing</li>
                    <li>• Software Development</li>
                    <li>• Algorithms</li>
                    <li>• Data/Discrete Structures</li>
                    <li>• Finite Automata</li>
                  </ul>
                </div>

                <!-- Economics Courses -->
                <div>
                  <h4 class="font-semibold text-primary-100 mb-3">Economics</h4>
                  <ul class="space-y-1 text-sm text-primary-300">
                    <li>• Econometrics</li>
                    <li>• Game Theory</li>
                    <li>• Intermediate Macro/Micro</li>
                    <li>• Global Econ History</li>
                  </ul>
                </div>

                <!-- Mathematics Courses -->
                <div>
                  <h4 class="font-semibold text-primary-100 mb-3">
                    Mathematics
                  </h4>
                  <ul class="space-y-1 text-sm text-primary-300">
                    <li>• Linear Algebra</li>
                    <li>• Statistics</li>
                    <li>• Calculus</li>
                    <li>• Operations Research</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- High School Education -->
        <div
          class="bg-navy-900 rounded-lg shadow-lg p-8 border border-navy-800 mt-8"
        >
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div
                class="w-16 h-16 bg-accent-900/30 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-8 h-8 text-accent-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.75 2.524z"
                  ></path>
                </svg>
              </div>
            </div>
            <div class="flex-1">
              <h3 class="text-2xl font-semibold text-primary-100 mb-2">
                Thomas Jefferson H.S. for Science and Technology
              </h3>
              <p class="text-lg text-accent-400 mb-2">
                Advanced High School Diploma
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Honors & Awards -->
      <div>
        <h2 class="text-3xl font-bold text-primary-100 mb-8 text-center">
          Honors & Awards
        </h2>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- Bennett Fellowship -->
          <div
            class="bg-gradient-to-br from-accent-900/20 to-accent-800/20 rounded-lg p-8 border border-accent-800 shadow-lg"
          >
            <div class="flex items-center mb-4">
              <div
                class="w-16 h-16 bg-accent-900/30 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-8 h-8 text-accent-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-2xl font-bold text-primary-100">
                  Bennett Fellowship
                </h3>
                <p class="text-accent-300 font-medium">W&M Economics</p>
              </div>
            </div>

            <p
              class="text-gray-700 dark:text-gray-300 mb-4 text-lg leading-relaxed"
            >
              Fellowship supporting research in experimental economics.
            </p>
          </div>

          <!-- Cisco Systems Award -->
          <div
            class="bg-gradient-to-br from-navy-900/20 to-navy-800/20 rounded-lg p-8 border border-navy-700 shadow-lg"
          >
            <div class="flex items-center mb-4">
              <div
                class="w-16 h-16 bg-navy-800 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-8 h-8 text-blue-600 dark:text-blue-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-2xl font-bold text-primary-100">
                  Cisco Systems Award
                </h3>
                <p class="text-blue-700 dark:text-blue-300 font-medium">
                  W&M Computer Science
                </p>
              </div>
            </div>
          </div>

          <!-- Spark Award -->
          <div
            class="bg-gradient-to-br from-purple-50 to-pink-50 dark:from-purple-900/20 dark:to-pink-900/20 rounded-lg p-8 border border-purple-200 dark:border-purple-800 shadow-lg"
          >
            <div class="flex items-center mb-4">
              <div
                class="w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-8 h-8 text-purple-600 dark:text-purple-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-2xl font-bold text-primary-100">
                  Spark Award
                </h3>
                <p class="text-purple-700 dark:text-purple-300 font-medium">
                  MITRE Corporation
                </p>
              </div>
            </div>

            <p
              class="text-gray-700 dark:text-gray-300 mb-4 text-lg leading-relaxed"
            >
              In recognition of my contributions during Summer 2024.
            </p>
          </div>

          <!-- Applause Award -->
          <div
            class="bg-gradient-to-br from-purple-50 to-pink-50 dark:from-purple-900/20 dark:to-pink-900/20 rounded-lg p-8 border border-purple-200 dark:border-purple-800 shadow-lg"
          >
            <div class="flex items-center mb-4">
              <div
                class="w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-8 h-8 text-purple-600 dark:text-purple-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path>
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-2xl font-bold text-primary-100">
                  Applause Award
                </h3>
                <p class="text-purple-700 dark:text-purple-300 font-medium">
                  MITRE Corporation
                </p>
              </div>
            </div>

            <p
              class="text-gray-700 dark:text-gray-300 mb-4 text-lg leading-relaxed"
            >
              For supporting a sponsor presentation in Summer 2025.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
