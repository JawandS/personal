---
// Hero Section Component
// Reusable hero section with gradient background
export interface Props {
  title: string;
  subtitle?: string;
  gradient?: string;
}

const { title, subtitle, gradient = "from-navy-800 to-accent-800" } = Astro.props;
---

<section class={`bg-gradient-to-r ${gradient} py-16 px-4 sm:px-6 lg:px-8`}>
  <div class="max-w-7xl mx-auto text-center">
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-4">
      {title}
    </h1>
    {subtitle && (
      <p class="text-xl sm:text-2xl text-white/90 max-w-3xl mx-auto">
        {subtitle}
      </p>
    )}
  </div>
</section>
