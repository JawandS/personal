---
// Card Component
// Reusable card component for projects, research, etc.
export interface Props {
  title: string;
  description?: string;
  href?: string;
  tags?: string[];
  date?: string;
  className?: string;
}

const { title, description, href, tags = [], date, className = "" } = Astro.props;
---

<div class={`bg-navy-900 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 border border-navy-800 hover:border-accent-600 ${className}`}>
  <div class="p-6">
    {date && (
      <div class="text-sm text-primary-400 mb-2">
        {date}
      </div>
    )}
    
    {href ? (
      <a href={href} class="group" target="_blank" rel="noopener noreferrer">
        <h3 class="text-xl font-semibold text-primary-100 group-hover:text-accent-400 transition-colors mb-2">
          {title}
        </h3>
      </a>
    ) : (
      <h3 class="text-xl font-semibold text-primary-100 mb-2">
        {title}
      </h3>
    )}
    
    {description && (
      <p class="text-primary-300 mb-4 line-clamp-3">
        {description}
      </p>
    )}
    
    <slot />
    
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mt-4">
        {tags.map((tag) => (
          <span class="px-3 py-1 text-xs font-medium bg-accent-900/30 text-accent-300 rounded-full border border-accent-800">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>
</div>
